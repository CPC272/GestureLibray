<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="color_ordinary_ring" format="color" />
    <attr name="color_on_ring" format="color" />
    <attr name="color_error_ring" format="color" />
    <attr name="outer_ring_spacing_width" format="integer" />
    <attr name="inner_ring_width" format="integer" />
    <attr name="inner_background_width" format="integer" />
    <declare-styleable name="GestureLock_styleable">
        //普通状态下圈的颜色
        <attr name="color_ordinary_ring" />
        //按下状态下圈的颜色
        <attr name="color_on_ring" />
        //错误时的颜色
        <attr name="color_error_ring" />
        //外圈大小
        <attr name="outer_ring_spacing_width" />
        //内圆大小
        <attr name="inner_ring_width" />
        //内圆背景大小
        <attr name="inner_background_width" />
    </declare-styleable>

</resources>